<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/light_news_item"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/item_background_selector_light"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">


            <LinearLayout
                android:id="@+id/ll_b"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/avatar"
                    android:scaleType="fitXY" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/authorname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="刘看山"
                        />
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/vote"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/main_blue_light"
                        android:text="1108"
                        />
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_b"
                android:padding="5dp"
                android:text="人在什么时候最舒服？"
                android:textColor="@color/dark_news_item"
                android:textSize="18sp" />
            <TextView

                android:id="@+id/tv_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:padding="5dp"
                android:text="刮风天，下雨天，或是下雪天，你和你的另一半窝在客厅的沙发里，电视里随机播放一部你俩都爱的电影，桌子上有两杯红酒，有小零食，厨房里煲着汤，你俩依偎在一起，天南海北的聊着，越聊越投机，聊累了就睡个长长的午觉，第二天还是周末。"
                android:textSize="14sp" />
        </RelativeLayout>

    </FrameLayout>
</LinearLayout>